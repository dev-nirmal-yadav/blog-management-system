<!-- This example requires Tailwind CSS v2.0+ -->
<nav class="bg-gray-800">
  <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
    <div class="relative flex items-center justify-between h-16">
      <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
        <div class="flex-shrink-0 flex items-center">
          <%= link_to image_tag('blog-icon.png', class: 'hidden lg:block h-8 w-auto'), root_path %>
        </div>
        <% if user_signed_in? %>
          <div class="hidden sm:block sm:ml-6">
            <div class="flex space-x-4">
              <%= link_to t('.manage_posts'), posts_path(own_posts: true), class: 'bg-gray-900 text-white px-3 py-2 rounded-md text-sm font-medium' %>
              <%= link_to t('.add_new_post'), new_post_path, class: 'bg-gray-900 text-white px-3 py-2 rounded-md text-sm font-medium' %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
        <div class="flex space-x-4">
          <% if user_signed_in? %>
            <%= link_to t('.edit_profile'), edit_user_path(current_user.id), class: "bg-gray-900 text-white px-3 py-2 rounded-md text-sm font-medium" %>
            <%= link_to t('.sign_out'), destroy_user_session_path, method: :delete, class: "bg-gray-900 text-white px-3 py-2 rounded-md text-sm font-medium" %>
          <% else %>
            <%= link_to t('.sign_in'), new_user_session_path, class: "bg-gray-900 text-white px-3 py-2 rounded-md text-sm font-medium" %>
            <%= link_to t('.sign_up'), new_user_register_path, class: "bg-gray-900 text-white px-3 py-2 rounded-md text-sm font-medium" %>
          <% end %>
      </div>
    </div>
  </div>
</nav>
